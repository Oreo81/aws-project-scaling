{
  "id": null,
  "uid": "ec2-autoscaling",
  "title": "EC2 Auto Scaling - Monitoring",
  "tags": ["aws", "ec2", "autoscaling", "node-exporter"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Instances actives",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "count(up == 1)",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["last"] }
      }
    },
    {
      "type": "stat",
      "title": "Instances DOWN",
      "id": 2,
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "count(up == 0)",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["last"] }
      }
    },
    {
      "type": "timeseries",
      "title": "CPU usage (%) par instance",
      "id": 3,
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "100 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m]) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Mémoire utilisée (%) par instance",
      "id": 4,
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "table",
      "title": "État des instances",
      "id": 5,
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "up",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "labelsToFields",
          "options": {}
        }
      ]
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  }
}
